<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/base_form">

    <!--充值-->

    <include layout="@layout/form_head" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp13"
        android:layout_marginStart="@dimen/dp13"
        android:layout_marginTop="@dimen/dp20"
        android:background="@drawable/shape_dialog"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp20"
            android:layout_marginTop="@dimen/dp24"
            android:text="请输入打印内容"
            android:textColor="#222222"
            android:textSize="@dimen/sp24" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp80"
            android:layout_marginStart="@dimen/dp20"
            android:layout_marginTop="@dimen/dp13">


            <EditText
                android:id="@+id/et_content"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/hint_edit"
                android:textColor="#222222"
                android:textColorHint="@color/text_hint"
                android:textSize="@dimen/sp28" />
        </LinearLayout>

        <View style="@style/view_line_short" />


        <Button
            android:id="@+id/btn_ok"
            style="@style/btn_ok"
            android:layout_marginBottom="@dimen/dp13"
            android:layout_marginEnd="@dimen/dp20"
            android:layout_marginStart="@dimen/dp20"
            android:layout_marginTop="@dimen/dp53"
            android:text="打印" />

        <Button
            android:id="@+id/btn_ok1"
            style="@style/btn_ok"
            android:layout_marginBottom="@dimen/dp13"
            android:layout_marginEnd="@dimen/dp20"
            android:layout_marginStart="@dimen/dp20"
            android:layout_marginTop="@dimen/dp53"
            android:text="打印" />

    </LinearLayout>


</LinearLayout>