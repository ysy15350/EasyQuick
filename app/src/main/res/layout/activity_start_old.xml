<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/base_form"
    android:background="@color/white">


    <include
        layout="@layout/form_head"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="@dimen/dp121"
        android:layout_height="@dimen/dp121"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp200"
        android:src="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/img_slogans"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp51"
        android:layout_below="@id/img_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp80"
        android:src="@mipmap/icon_slogans" />


    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/header_hint_refresh_loading"
        android:textColor="@color/text_content"
        android:textSize="@dimen/sp22"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_retry"
        android:layout_width="@dimen/dp100"
        android:layout_height="@dimen/dp40"
        android:layout_below="@id/tv_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp13"
        android:gravity="center"
        android:text="点击重试"
        android:textColor="@color/btn_normal"
        android:textSize="@dimen/sp18"
        android:visibility="gone" />


    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp130"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/dp50"
            android:layout_height="@dimen/dp50"
            android:layout_marginStart="@dimen/dp120"
            android:src="@mipmap/ic_launcher" />

        <TextView
            style="@style/text_content"
            android:layout_marginStart="@dimen/dp13"
            android:text="@string/app_name"
            android:textColor="@color/text_title"
            android:textSize="@dimen/sp28"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        style="@style/view_line"
        android:layout_above="@id/ll_bottom" />


</RelativeLayout>